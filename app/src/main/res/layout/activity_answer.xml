<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.washington.benjamon.quizdroid.AnswerActivity"
    android:id="@+id/relay">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What&apos;s the deal with flies"
        android:id="@+id/theQuestion"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48px"
        android:layout_marginBottom="32px" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Correct Answer"
        android:id="@+id/correctAnswer"
        android:layout_below="@+id/theQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32px"
        android:layout_marginTop="32px"
        android:textSize="12pt" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Answer"
        android:id="@+id/yourAnswer"
        android:textSize="12pt"
        android:layout_below="@+id/correctAnswer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32px" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0 / 0 correct"
        android:id="@+id/totalCorrect"
        android:textSize="12pt"
        android:layout_below="@+id/yourAnswer"
        android:layout_alignLeft="@+id/yourAnswer"
        android:layout_alignStart="@+id/yourAnswer" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="NEXT QUESTION"
        android:id="@+id/nextQ"
        android:textSize="14pt"
        android:layout_marginBottom="76dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
